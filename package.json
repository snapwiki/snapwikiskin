{
  "private": true,
  "scripts": {
    "prettier": "prettier --check .",
    "fix-format": "prettier --write .",
    "lint:css": "stylelint \"**/**.css\"",
    "fix-styling": "stylelint \"**/**.css\" --fix",
    "lint:js": "eslint . --ext .js --cache --fix",
    "lint": "npm run lint:css && npm run lint:js",
    "test": "npm run lint && npm run prettier",
    "fix": "npm run fix-format && npm run fix-styling",
    "minify": "minhtml --collapse-whitespace --remove-comments --input-dir ./templates --output-dir ./templates/minified --file-ext mustache"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-wikimedia": "^0.20.0",
    "minhtml": "^0.3.0",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-wikimedia": "^0.11.1"
  }
}
